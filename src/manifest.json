{
  "manifest_version": 2,
  "name": "Relayone Extension",
  "version": "0.1.0",
  "browser_action": {
    "default_icon": "relay.svg"
  },
  "background": {
    "scripts": [
      "background/index.ts"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "js": [
        "content/index.ts"
      ],
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    "inject.ts"
  ],
  "permissions": [
    "activeTab",
    "storage"
  ]
}